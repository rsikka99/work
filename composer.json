{
    "name"       : "tangentmtw/mpstoolbox",
    "authors"    : [
        {
            "name" : "Lee Robert",
            "email": "lrobert@tangentmtw.com"
        },
        {
            "name" : "Tyson Riehl",
            "email": "triehl@tangentmtw.com"
        }
    ],
    "description": "MPS Tools",
    "license"    : "proprietary",
    "require"    : {
        "php"                         : ">5.4.0",
        "zendframework/zendframework1": "1.12.x",
        "leafo/lessphp"               : "0.3.9",
        "phpexcel/phpexcel"           : "dev-master",
        "gChartPhp/gChartPhp"         : "dev-master",
        "robmorgan/phinx"             : "*",
        "nesbot/Carbon"               : "1.7.x",
        "michelf/php-markdown"        : "1.4.*",
        "phpoffice/phpword"           : "dev-develop"
    },
    "require-dev": {
        "phpunit/phpunit": "3.7.x",
        "phpunit/dbunit" : "1.2.x"
    },
    "autoload"   : {
        "psr-0": {
            "Tangent_": "library/",
            "My_"     : "library/"
        }
    },
    "scripts"    : {
        "post-package-install": [
            "Tangent_ComposerFunctions::postPackageInstall"
        ],
        "post-package-update" : [
            "Tangent_ComposerFunctions::postPackageUpdate"
        ]
    }
}
