	function edit_rate(term, range) {
		var label = $('#label-term'+term+'-range'+range);
		var editbox = $('#edit-term'+term+'-range'+range);
		var field = $('#term'+term+'-range'+range);
		
		if (editbox.is(':visible')) {
			label.html(field.val());
			editbox.hide();
			label.show();
		} else {
			label.hide();
			editbox.show();
		}
	}
	
	function edit_term(term) {
		var label = $('#label-term'+term);
		var editbox = $('#edit-term'+term);
		var field = $('#term'+term);
		
		if (editbox.is(':visible')) {
			label.html(field.val());
			editbox.hide();
			label.show();
		} else {
			label.hide();
			editbox.show();
		}
	}
	
