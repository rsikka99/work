<?php
/**
 * Assessment Title Page
 */
/* @var $phpword PHPWord */
$phpword = $this->phpword;

/* @var $quote Quotegen_Model_Quote */
$quote = $this->quote;

$client = $quote->getClient();


$quoteDate = date('F jS, Y', strtotime($quote->quoteDate));

/* @var $section PHPWord_Section */
$section = $this->section;

$clientName = $quote->clientDisplayName;
if (empty($clientName))
{
    $clientName = $client->companyName;
}

$section->addText($this->translate('Prepared For:') . " " . $clientName, 'titlepageHeaderFont', 'titlepageHeaderParagraph');

$section->addText($quoteDate, 'titlepageHeaderFont', 'titlepageHeaderParagraph');
$section->addTextBreak(4);

//add the addresses
$section->addText($client->getAddress()->addressLine1, null, 'nospacing');

if (strlen($client->getAddress()->addressLine2) > 0)
{
	$section->addText($client->getAddress()->addressLine2, null, 'nospacing');
}

$section->addText("{$client->getAddress()->city}, {$client->getAddress()->getRegionName()} {$client->getAddress()->postCode}", null, 'nospacing');
$section->addText($client->getAddress()->getCountry(), null, 'nospacing');
