<?php $rmsUpload = $this->rmsUpload; ?>
<?php if ($rmsUpload instanceof Proposalgen_Model_Rms_Upload) : ?>
    <div class="well">
        <h1>Upload Complete</h1>

        <p>You uploaded a <?php echo $this->escape($rmsUpload->getRmsProvider()->name); ?> CSV file. The name of the file is
