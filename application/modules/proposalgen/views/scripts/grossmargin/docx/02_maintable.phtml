$table->addCell($tcStyle->col11Width, $tcStyle->footer->cell)->addText('$' . number_format($this->proposal->GrossMarginTotalMonthlyCost->Color, 2), $tcStyle->footer->fontStyle, $tcStyle->rightalign);

