$table->addCell($tcStyle->col1Width, $tcStyle->footer->cell)->addText($this->translate('Totals for ' . $proposal->PurchasedDeviceCount. ' devices:'), $tcStyle->footer->fontStyle, $tcStyle->rightalign);
$table->addCell($tcStyle->col2Width, $tcStyle->footer->cell)->addText(number_format($this->proposal->PageCounts->Purchased->BlackAndWhite->Monthly), $tcStyle->footer->fontStyle, $tcStyle->rightalign);
