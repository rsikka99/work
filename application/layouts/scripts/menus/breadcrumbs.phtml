<?php
$html = array('<ul class="breadcrumb">',
        '<li><a href="' . $this->baseUrl('/') . '">Home</a></li>');

for ($i = 0; $i < count($this->pages); $i ++) {
    $html[] = "<li><span class='divider'>/</span><a href='" .
             $this->pages[$i]->getHref() . "'>" . $this->pages[$i]->getLabel() .
             "</a></li>";
}

$html[] = '</ul>';

echo join(PHP_EOL, $html);